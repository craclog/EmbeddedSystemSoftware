<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OmokActivity" android:id="@+id/main_layout">
    <ImageView
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/ok_btn"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/up_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ok_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/ok_btn"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/right_btn"
            android:rotation="90" app:layout_constraintStart_toEndOf="@+id/ok_btn"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/ok_btn" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/left_btn"
            android:rotation="270"
            app:layout_constraintEnd_toStartOf="@+id/ok_btn" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/ok_btn" app:layout_constraintHorizontal_bias="1.0"/>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp" app:srcCompat="@android:drawable/arrow_up_float"
            android:id="@+id/down_btn"
            android:rotation="180" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ok_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ok_btn" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="My ID Here"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/myID_textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="30sp" android:textAlignment="center" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/vs_textView" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="VS"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/vs_textView"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="40sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/OpID_textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Opponent ID Here"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/OpID_textView"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/myID_textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/up_btn"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>